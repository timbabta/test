                $path_new = mb_strcut($path, 0, $path_len + 1);
                $image = "";
                $text .= "<a href='https://" . $_SERVER['SERVER_NAME'] . $path_new . $item['image'] . "'>&#8203;&#8203;</a>";
            }
            $text .= "<b>–ù–∞–∑–≤–∞–Ω–∏–µ: </b>" . $item['name'] . "\n";
